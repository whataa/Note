<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/main_static_container"
        android:name="io.whataa.fragmentapp.StaticLoadFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <RadioGroup
        android:id="@+id/main_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/main_button_0"
            android:text="button0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/main_button_1"
            android:text="button1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/main_button_2"
            android:text="button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:lines="1"
            android:text="backStack"
            android:onClick="mainBtn1Click"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:lines="1"
            android:text="pager"
            android:onClick="mainBtn2Click"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:lines="1"
            android:onClick="mainBtn3Click"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:lines="1"
            android:onClick="mainBtn4Click"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
