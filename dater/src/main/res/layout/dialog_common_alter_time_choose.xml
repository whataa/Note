<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:orientation="vertical">

        <TextView
            android:id="@+id/picker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:text="时间选择器"
            android:textColor="#77ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/picker_date_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="@android:color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/picker_time_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="16dp"
                android:textColor="#77ffffff"
                android:textSize="21sp" />
        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/picker_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/picker_btn_1"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="@drawable/abc_list_selector_holo_light"
            android:gravity="center"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/picker_btn_2"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@drawable/abc_list_selector_holo_light"
            android:gravity="center"
            android:text="下一步"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>