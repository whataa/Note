        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edittext1"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edittext2"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edittext3"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
